<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rc_update" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/version_number_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/marquee_bg"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="版本 v1.01"
            android:textColor="@color/marquee_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/version_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rim"
            android:paddingBottom="30dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="1234567"
            android:textColor="@color/blacks"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bgDark" />

        <ListView
            android:id="@+id/version_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

</LinearLayout>