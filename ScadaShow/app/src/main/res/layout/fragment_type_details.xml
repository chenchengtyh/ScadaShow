<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ListView
        android:id="@+id/type_detail_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/type_bg_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

    </ListView>

    <LinearLayout
        android:id="@+id/type_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/type_bg_nopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/type_pc"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/type_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rc_order_pic"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/bgDark" />

    </LinearLayout>


</RelativeLayout>